{% extends "base.html.twig" %}
{% block title 'EpiHub - Articles' %}
{% block body %}
    <div class="jumbotron" style="margin-bottom: 0;">
        <div class="container">
            <h1 class="display-4">Recherche...</h1>
            <p class="lead">Liste des résultats trouvés </p>
            <hr class="my-4">
            <div class="spinner-grow text-dark"></div>
            <div class="spinner-grow text-dark"></div>
            <div class="spinner-grow text-dark"></div>
        </div>
    </div>
    <div class="container" style="margin-top: 5%; margin-bottom: 5%">
        <div class="list-group">
            {%  for property in properties %}
                <hr>
                <a href="{{ path('article.show', {id: property.id, slug: property.slug}) }}" class="list-group-item list-group-item-action flex-column align-items-start">
                    <div class="d-flex w-100 justify-content-between">
                        <h5 class="mb-1">{{ property.title }}</h5>
                    </div>
                    <p class="mb-1"></p>
                </a>
            {% endfor %}
        </div>
    </div>
{% endblock %}